rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // === 사용자 인증 확인 함수 ===
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // === 사용자 본인 확인 함수 ===
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // === 관리자 확인 함수 (향후 확장용) ===
    function isAdmin() {
      return isAuthenticated() && 
        request.auth.token.admin == true;
    }
    
    // === 사용자 프로필 컬렉션 ===
    match /users/{userId} {
      // 모든 인증된 유저는 검색을 위해 타인의 프로필을 읽을 수 있음
      allow read: if request.auth != null;
      // 생성 및 수정은 본인 UID와 문서 ID가 일치할 때만 허용
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // 프로필 삭제는 기본적으로 금지
      allow delete: if false;
    }
    
    // === 메모 컬렉션 ===
    match /memos/{memoId} {
      // 읽기: 본인 메모 또는 나에게 공유된 메모
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (resource.data.sharedWithUids != null && request.auth.uid in resource.data.sharedWithUids)
      );
      
      // 생성: 인증된 사용자만 (본인 ID로만)
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // 업데이트: 본인 메모이거나 공유받은 권한 중 수정 권한이 있는 경우
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (resource.data.sharedWith != null && 
         resource.data.sharedWith.filter(u, u.uid == request.auth.uid && u.permissions.edit == true).size() > 0 &&
         // 공유받은 사용자는 소유자나 공유 설정을 변경할 수 없음
         request.resource.data.userId == resource.data.userId &&
         (request.resource.data.sharedWith == resource.data.sharedWith || !('sharedWith' in request.resource.data)) &&
         (request.resource.data.sharedWithUids == resource.data.sharedWithUids || !('sharedWithUids' in request.resource.data)))
      );
      
      // 삭제: 본인 메모이거나 공유받은 권한 중 삭제 권한이 있는 경우
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (resource.data.sharedWith != null && 
         resource.data.sharedWith.filter(u, u.uid == request.auth.uid && u.permissions.delete == true).size() > 0)
      );
    }
    
    // === 카테고리 컬렉션 ===
    match /categories/{categoryId} {
      // 읽기: 본인 카테고리만
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      
      // 생성: 인증된 사용자만 (본인 ID로만)
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // 업데이트: 본인 카테고리만
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == request.auth.uid;
      
      // 삭제: 본인 카테고리만
      allow delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // === 템플릿 컬렉션 ===
    match /templates/{templateId} {
      // 읽기: 본인 템플릿 또는 공개 템플릿
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.isPublic == true
      );
      
      // 생성: 인증된 사용자만 (본인 ID로만)
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // 업데이트: 본인 템플릿만
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == request.auth.uid;
      
      // 삭제: 본인 템플릿만
      allow delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // === 알림 컬렉션 ===
    match /notifications/{notificationId} {
      // 읽기: 수신자 본인만
      allow read: if isAuthenticated() && 
        resource.data.receiverId == request.auth.uid;
      
      // 생성: 모든 인증된 사용자 (공유 시 알림 전송을 위해)
      allow create: if isAuthenticated();
      
      // 업데이트: 수신자 본인이 읽음 처리하는 경우만 허용
      allow update: if isAuthenticated() && 
        resource.data.receiverId == request.auth.uid &&
        request.resource.data.receiverId == request.auth.uid;
      
      // 삭제: 수신자 본인만
      allow delete: if isAuthenticated() && 
        resource.data.receiverId == request.auth.uid;
    }
    
    // === 향후 확장을 위한 규칙들 ===
    
    // === 공개 데이터 컬렉션 (향후 확장용) ===
    match /public/{document=**} {
      // 공개 데이터는 모든 인증된 사용자가 읽기 가능
      allow read: if isAuthenticated();
      
      // 생성/수정/삭제는 관리자만
      allow write: if isAdmin();
    }
    
    // === 시스템 설정 컬렉션 (향후 확장용) ===
    match /system/{document=**} {
      // 시스템 설정은 관리자만 접근 가능
      allow read, write: if isAdmin();
    }
    
    // === 기본 거부 규칙 ===
    // 위의 규칙에 해당하지 않는 모든 요청 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 